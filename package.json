  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "coverage": "ng test --codeCoverage=true",
    "test": "ng test",
    "test-headless": "ng test --watch=false --browsers=ChromeHeadless",
