    "@angular/platform-browser-dynamic": "^10.1.1",
    "@angular/router": "^10.1.1",
    "@mdi/font": "^2.8.94",
    "core-js": "^2.6.11",
    "eslint-plugin-jasmine": "^4.1.1",
    "lodash": "^4.17.20",
    "rxjs": "6.5.5",
    "rxjs-compat": "6.3.3",
